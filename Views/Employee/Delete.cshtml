@model Employee
@{
    ViewBag.Title = "Delete Movie";
}

<h2>Are you sure to delete Employee @Model.FirstName @Model.LastName?</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <button type="submit" class="btn btn-success">Yes</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">No</a>
</form>
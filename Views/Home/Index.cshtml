@model List<Employee>
@{
    ViewBag.Title = "List of Employee";
}
<h1>List of Employees</h1>
<a asp-controller="Employee" asp-action="Add">Add New Employee</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Job Title</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in @Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.JobTitle</td>
                <td>@string.Format("{0:c}", @employee.Salary)</td>
                <td>
                    <a asp-controller="Employee" asp-action="Detail" asp-route-id="@employee.EmployeeID">View</a> |
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a> |
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
